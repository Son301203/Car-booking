<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Text Layout (Pickup, Destination, Dates) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Departure Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_pin"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/driver_primary"/>

                <TextView
                    android:id="@+id/txtDepatureCurrent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pick Up: Quang Ninh"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
            </LinearLayout>

            <!-- Destination Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_destination"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/driver_error"/>

                <TextView
                    android:id="@+id/txtDestinationCurrent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Destination: Ha Noi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
            </LinearLayout>

            <!-- Departure Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/driver_warning"/>

                <TextView
                    android:id="@+id/txtDepatureDateCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/12/2003"
                    android:textSize="13sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Delete Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E0E0E0"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/btnDeleteItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_delete_24"
                android:contentDescription="Delete"
                android:padding="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#757575" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>