<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Text Layout (Pickup, Destination, Dates) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDepatureCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Up: Quang Ninh"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/txtDestinationCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination: Ha Noi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDepatureDateCurrent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Depature Date: 20/12/2003"
                    android:textSize="16sp"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/txtReturnDateCurrent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Return Date: 20/12/2003"
                    android:textSize="16sp"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnDeleteItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Delete"
            android:padding="8dp"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>

</androidx.cardview.widget.CardView>