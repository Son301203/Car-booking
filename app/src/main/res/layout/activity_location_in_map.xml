<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.drivers.LocationInMapActivity">

    <!-- Modern Toolbar with Elevation -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/toolbar_bg">

        <RelativeLayout
            android:id="@+id/toolbarRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_toolbar_height"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/toolbarbtnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:contentDescription="Back"
                app:tint="@color/text_primary"/>

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                style="@style/TextAppearance.Material3.TitleMedium"/>

            <ImageButton
                android:id="@+id/toolbarbtnGps"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_gps"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:contentDescription="Current Location"
                app:tint="@color/primary"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Modern Tab Buttons -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tabCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarCard"
        app:cardElevation="6dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/locationButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickUpPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Điểm đón"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/tab_button_selector"
                android:textColor="@color/tab_button_text_color"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp"
                app:elevation="2dp"
                app:icon="@drawable/ic_location"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/tab_button_text_color"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Điểm đích"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/tab_button_selector"
                android:textColor="@color/tab_button_text_color"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minHeight="48dp"
                android:layout_marginStart="8dp"
                app:cornerRadius="12dp"
                app:elevation="2dp"
                app:icon="@drawable/ic_destination"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/tab_button_text_color"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/mapFragmentDriver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@id/tabCard"/>


    <!-- Modern Floating Zoom Controls -->
    <LinearLayout
        android:id="@+id/zoomControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:elevation="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/zoomInButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_zoom_in"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:contentDescription="Zoom In"
                app:tint="@color/primary"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <ImageButton
                android:id="@+id/zoomOutButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_zoom_out"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:contentDescription="Zoom Out"
                app:tint="@color/primary"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>